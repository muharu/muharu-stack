{
  "name": "muharu-stack",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development bunx --bun vite --host",
    "build": "rimraf dist && bun build:remix && bun build:bun && bun build:node && bun build:vercel",
    "build:bun": "bun bundler/bun.ts",
    "build:node": "tsx bundler/node.ts",
    "build:vercel": "tsx bundler/vercel.ts",
    "build:remix": "tsx bundler/remix.ts",
    "start:bun": "cross-env NODE_ENV=production bun dist/bun.js",
    "start:node": "cross-env NODE_ENV=production node dist/node.js",
    "db:push": "bun drizzle-kit push",
    "db:generate": "bun drizzle-kit generate",
    "db:migrate": "bun drizzle-kit migrate",
    "db:seed": "bun server/db/seeder.ts",
    "db:gui": "bun drizzle-kit studio --verbose",
    "ui:add": "bunx --bun shadcn@latest add",
    "format": "prettier --check app server bundler",
    "format:fix": "prettier --write app server bundler",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint --fix ."
  },
  "dependencies": {
    "@epic-web/remember": "^1.1.0",
    "@hono/node-server": "^1.13.4",
    "@hono/trpc-server": "^0.3.2",
    "@oslojs/crypto": "^1.0.1",
    "@oslojs/encoding": "^1.1.0",
    "@radix-ui/react-icons": "^1.3.1",
    "@radix-ui/react-slot": "^1.1.0",
    "@remix-run/node": "^2.13.1",
    "@remix-run/react": "^2.13.1",
    "@remix-run/serve": "^2.13.1",
    "@t3-oss/env-core": "^0.11.1",
    "@tanstack/react-query": "^5.59.16",
    "@trpc/client": "^11.0.0-rc.604",
    "@trpc/server": "^11.0.0-rc.604",
    "arctic": "^2.2.1",
    "chalk": "^5.3.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.36.0",
    "hono": "^4.6.8",
    "isbot": "^4.1.0",
    "oslo": "^1.2.1",
    "pg": "^8.13.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.3.0",
    "superjson": "^2.2.1",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@faker-js/faker": "^9.1.0",
    "@hono/vite-dev-server": "^0.16.0",
    "@remix-run/dev": "^2.13.1",
    "@types/bun": "^1.1.12",
    "@types/node": "^22.8.6",
    "@types/pg": "^8.11.10",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "autoprefixer": "^10.4.19",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.27.0",
    "esbuild": "^0.24.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "globals": "^15.11.0",
    "postcss": "^8.4.38",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.4",
    "tsx": "^4.19.2",
    "typescript": "^5.1.6",
    "typescript-eslint": "^8.12.2",
    "vite": "^5.4.10",
