{
  "name": "muharu-stack",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development bunx --bun vite",
    "build": "cross-env NODE_ENV=production bun run clean && bun run build:server:bun && bun run build:server:node && bun run build:remix:bun",
    "build:remix:bun": "cross-env NODE_ENV=production bunx --bun remix vite:build",
    "build:remix:node": "cross-env NODE_ENV=production remix vite:build",
    "build:server:bun": "cross-env NODE_ENV=production bun run ./bundler/bun/index.ts",
    "build:server:node": "cross-env NODE_ENV=production tsx ./bundler/node/index.ts",
    "start:server:bun": "cross-env NODE_ENV=production bun run dist/bun.js",
    "start:server:node": "cross-env NODE_ENV=production node dist/node.js",
    "db:push": "bun run drizzle-kit push",
    "db:generate": "bun run drizzle-kit generate",
    "db:migrate": "bun run drizzle-kit migrate",
    "db:seed": "bun run ./server/db/seeder.ts",
    "db:gui": "bun drizzle-kit studio --verbose",
    "format": "prettier --write ./app ./server ./bundler",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "clean": "rimraf ./dist && rimraf ./build"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.4",
    "@hono/trpc-server": "^0.3.2",
    "@remix-run/node": "^2.13.1",
    "@remix-run/react": "^2.13.1",
    "@remix-run/serve": "^2.13.1",
    "@t3-oss/env-core": "^0.11.1",
    "@tanstack/react-query": "^5.59.16",
    "@trpc/client": "^11.0.0-rc.604",
    "@trpc/react-query": "^11.0.0-rc.604",
    "@trpc/server": "^11.0.0-rc.604",
    "chalk": "^5.3.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.36.0",
    "hono": "^4.6.8",
    "isbot": "^4.1.0",
    "pg": "^8.13.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-hono": "^0.0.16",
    "superjson": "^2.2.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.1.0",
    "@hono/vite-dev-server": "^0.16.0",
    "@remix-run/dev": "^2.13.1",
    "@types/bun": "^1.1.12",
    "@types/node": "^22.8.6",
    "@types/pg": "^8.11.10",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "autoprefixer": "^10.4.19",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.27.0",
    "esbuild": "^0.24.0",
    "eslint": "^8.38.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.38",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.4",
    "tsx": "^4.19.2",
    "typescript": "5.1.6",
    "vite": "^5.4.10",
    "vite-tsconfig-paths": "^4.2.1"
  }
}
